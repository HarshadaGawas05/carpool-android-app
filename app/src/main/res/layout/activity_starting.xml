<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_background"
    tools:context=".Activities.StartingActivity"
    android:padding="10dp">

    <ImageView
        android:layout_marginTop="140dp"
        android:layout_width="match_parent"
        app:srcCompat="@drawable/logo_main"
        android:id="@+id/logoImageView"
        android:layout_height="240dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoImageView"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/main"
        android:text="WelCome To Carpool"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/main"
        android:textSize="20dp"
        android:text="Your ride-sharing revolution! Connect, share, and save with ease. Say goodbye to solo trips and hello to greener commutes. Join now and transform your journey!"
        android:layout_below="@+id/text1"
        />

    <Button
        android:layout_below="@+id/text2"
        android:id="@+id/GetStartedBtn"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style"
        android:textColor="@color/white"
        android:text="Get Started"
        android:fontFamily="@font/main"
        />

</RelativeLayout>